{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "newspaper-columns-block/newspaper-columns-block",
  "version": "0.1.0",
  "title": "Newspaper Columns Block",
  "category": "design",
  "icon": "columns",
  "description": "Implements a block that allows text to wrap across 2 or more columns - like a newspaper",
  "keywords": [
    "newspaper",
    "columns",
    "flow",
    "text"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "newspaper-columns-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "styles": [
    {
      "name": "default",
      "label": "Default",
      "isDefault": true
    },
    {
      "name": "drop-cap",
      "label": "Dropped Initial Capital"
    }
  ],
  "attributes": {
    "content": {
      "type": "string",
      "source": "html",
      "selector": "div"
    },
    "backgroundColor": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "padding": {
      "type": "object",
      "default": {
        "top": "20px",
        "left": "20px",
        "right": "20px",
        "bottom": "20px"
      }
    },
    "columnCount": {
      "type": "integer",
      "default": 4
    },
    "columnWidth": {
      "type": "integer",
      "default": 200
    },
    "columnGap": {
      "type": "integer",
      "default": 40
    },
    "columnRuleColor": {
      "type": "string",
      "default": "#b8b8b8"
    },
    "columnRuleWidth": {
      "type": "integer",
      "default": 1
    },
    "columnRuleStyle": {
      "type": "string",
      "default": "solid"
    },
    "dropCapColor": {
      "type": "string"
    }
  }
}