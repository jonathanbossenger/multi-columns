{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "newspaper-columns-block/newspaper-columns-block",
  "version": "0.1.0",
  "title": "Newspaper Columns Block",
  "category": "design",
  "icon": "columns",
  "description": "Implements a block that allows text to wrap across 2 or more columns - like a newspaper",
  "keywords": [
    "newspaper",
    "columns",
    "flow",
    "text"
  ],
  "supports": {
    "color": {
      "link": true
    },
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "textdomain": "newspaper-columns-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "styles": [
    {
      "name": "default",
      "label": "Default",
      "isDefault": true
    },
    {
      "name": "drop-cap",
      "label": "Dropped Initial Capital"
    }
  ],
  "attributes": {
    "content": {
      "type": "string",
      "source": "html",
      "selector": "div"
    },
    "style": {
      "type": "object",
      "default": {
        "color": {
          "text": "#3a3a3a",
          "background": "#fbf9f4"
        },
        "elements": {
          "link": {
            "color": {
              "text": "#0000cc"
            }
          }
        },
        "spacing": {
          "padding": {
            "top": "20px",
            "right": "20px",
            "bottom": "20px",
            "left": "20px"
          }
        }
      }
    },
    "columnRuleColor": {
      "type": "string",
      "default": "#b8b8b8"
    },
    "dropCapColor": {
      "type": "string",
      "default": "#b8b8b8"
    },
    "columnCount": {
      "type": "integer",
      "default": 4
    },
    "columnWidth": {
      "type": "integer",
      "default": 200
    },
    "columnGap": {
      "type": "integer",
      "default": 40
    },
    "columnRuleWidth": {
      "type": "integer",
      "default": 1
    },
    "columnRuleStyle": {
      "type": "string",
      "default": "solid"
    },
    "dropCapSize": {
      "type": "object",
      "default": {
        "size": "small",
        "fontSize": "3.8rem",
        "lineHeight": "3.5rem"
      }
    }
  }
}